<Mxa::Modal @onDismiss={{@onDismiss}} data-test-modal>
  <Mxa::DialogCard
    class="inline-block align-bottom bg-white text-left overflow-visible p-8 transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full"
    role="dialog"
    aria-modal="true"
    aria-labelledby={{this.titleId}}
    aria-describedby={{this.contentId}}
    {{did-insert this.onDidInsert}}
    data-test-modal-dialog
    ...attributes>
    <button type="button"
      aria-label="Close dialog"
      class="absolute right-4 top-6"
      {{on "click" @onDismiss}}
      {{focus-on-render}} data-test-modal-dialog-close>
      <svg class="fill-current h-3 w-3 mr-2">
        <use xlink:href="/svg-defs.svg#close-12"></use>
      </svg>
    </button>
    <h2 id={{this.titleId}} data-test-modal-dialog-title>{{@title}}</h2>
    <section id={{this.contentId}} data-test-modal-dialog-content>
      {{yield}}
    </section>
  </Mxa::DialogCard>
</Mxa::Modal>
