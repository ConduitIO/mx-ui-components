{{#if @label}}
  <Mox::Label for={{@id}} @isRequired={{@isRequired}}>{{@label}}</Mox::Label>
{{/if}}
<input
  id={{@id}}
  type="text"
  class="px-4 py-2 w-full bg-gray-800 border-gray-500 text-white text-sm focus:border-cyan-500 focus:ring-cyan-500 disabled:bg-gray-700 disabled:border-gray-700 disabled:text-gray-500 disabled:cursor-not-allowed rounded"
  value={{@value}}
  placeholder={{@placeholder}}
  {{on "input" this.onInput}}
  data-test-mox-input
  ...attributes
/>
