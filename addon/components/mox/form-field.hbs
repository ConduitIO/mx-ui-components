<section
  class="border border-gray-300 dark:border-gray-500 rounded bg-gray-50 dark:bg-gray-800 flex items-center justify-between p-4 gap-x-4 flex-1
    text-gray-800 dark:text-white"
  data-test-mox-form-field
  ...attributes
>
  <div class="text-gray-800 dark:text-white rounded bg-gray-200 dark:bg-gray-900 p-3" data-test-mox-form-field-icon>
    {{yield to="icon"}}
  </div>
  <div>
    <label class="text-sm font-medium text-gray-800 dark:text-white" for={{@id}} data-test-mox-form-field-title>
      {{yield to="title"}}
    </label>
    <div class="text-xs text-gray-500 dark:text-gray-300" data-test-mox-form-field-description>
      {{yield to="description"}}
    </div>
  </div>
  <div class="flex-auto"></div>
  <div data-test-mox-form-field-controls>
    {{yield to="controls"}}
  </div>
</section>
