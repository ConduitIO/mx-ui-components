{{#if @onClick}}
  <button
    class="{{this.buttonClass}} {{this.disabledClass}} bg-transparent"
    type={{this.buttonTypeAttr}}
    disabled={{this.isDisabled}}
    style={{this.buttonStyle}}
    {{on "click" (perform this.actionTask)}}
    {{did-insert this.getButtonWidth}}
    data-test-mox-button
    ...attributes
  >
    {{#if this.actionTask.isIdle}}
      {{#if (has-block)}}
        {{yield}}
      {{else}}
        {{this.buttonTitle}}
      {{/if}}
    {{else}}
      <div class="flex items-center justify-center" data-test-mox-button-loading>
        <svg fill="none" viewBox="0 0 24 24" class="h-6 w-6 animate-spin">
          <circle
            opacity="0.25"
            cx="12"
            cy="12"
            r="10"
            stroke="currentColor"
            stroke-width="4"
          ></circle>
          <path
            opacity="0.75"
            fill="currentColor"
            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
          ></path>
        </svg>
      </div>
    {{/if}}
  </button>
{{else}}
  <button
    class="{{this.buttonClass}} {{this.disabledClass}} bg-transparent"
    type={{this.buttonTypeAttr}}
    disabled={{this.isDisabled}}
    data-test-mox-button
    ...attributes
  >
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{this.buttonTitle}}
    {{/if}}
  </button>
{{/if}}
