{{#if @route}}
  <LinkTo
    class="font-medium text-sm text-cyan-500 hover:text-white transition"
    @route={{@route}}
    @model={{@model}}
    data-test-mox-link={{@route}}
    ...attributes
  >
    {{yield}}
  </LinkTo>
{{else}}
  <a href={{@externalUrl}} target="_blank" class="font-medium text-sm text-cyan-500 hover:text-white transition" data-test-mox-link rel="noopener noreferrer">{{yield}}</a>
{{/if}}
